generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Denormalized table for event statistics
model EventStatistic {
  id            String   @id @default(cuid())
  eventId       String   @unique

  timestamp     DateTime
  source        String   // 'facebook' or 'tiktok'
  funnelStage   String   // 'top' or 'bottom'
  eventType     String

  // For Facebook
  userId        String?
  userName      String?
  userAge       Int?
  userGender    String?
  country       String?
  city          String?

  // For TikTok
  username      String?
  followers     Int?
  watchTime     Int?
  percentageWatched Decimal?

  createdAt     DateTime @default(now())

  @@index([timestamp])
  @@index([source])
  @@index([funnelStage])
  @@index([eventType])
  @@index([source, timestamp])
  @@index([source, funnelStage, timestamp])
}

// Denormalized table for revenue data
model RevenueRecord {
  id            String   @id @default(cuid())
  eventId       String   @unique

  timestamp     DateTime
  source        String   // 'facebook' or 'tiktok'
  eventType     String   // 'checkout.complete' or 'purchase'

  purchaseAmount Decimal @db.Decimal(10, 2)

  // For Facebook
  campaignId    String?
  adId          String?
  userId        String?

  // For TikTok
  username      String?
  purchasedItem String?

  createdAt     DateTime @default(now())

  @@index([timestamp])
  @@index([source])
  @@index([source, timestamp])
  @@index([campaignId])
}

// Denormalized table for demographics
model DemographicRecord {
  id            String   @id @default(cuid())
  eventId       String   @unique

  timestamp     DateTime
  source        String   // 'facebook' or 'tiktok'

  // Facebook demographics
  userId        String?
  userName      String?
  age           Int?
  gender        String?
  country       String?
  city          String?

  // TikTok demographics
  username      String?
  followers     Int?

  createdAt     DateTime @default(now())

  @@index([timestamp])
  @@index([source])
  @@index([source, timestamp])
  @@index([country])
  @@index([gender])
}
